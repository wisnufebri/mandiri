<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WisnuFebri" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorCloudBlack</item>
        <item name="colorOnPrimary">@color/colorDarkBlueSky</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorCloudBlack</item>
        <item name="colorSecondaryVariant">@color/colorCloudWhite</item>
        <item name="colorOnSecondary">@color/textColorPrimary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="RatingBarTheme" parent="Theme.AppCompat">
        <item name="colorControlNormal">#FFFFFF</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="NunitoRegularStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/nunito</item>
    </style>

    <style name="TextViewBoldWhiteSmall">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:fontFamily">@font/google_sans_bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <style name="TextViewRegularDarkGraySmall">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:fontFamily">@font/google_sans_regular</item>
        <item name="android:textColor">@color/colorDarkGray</item>
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <style name="TextViewRegularDarkGrayMediumSmall">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:fontFamily">@font/google_sans_regular</item>
        <item name="android:textColor">@color/colorDarkGray</item>
        <item name="android:textSize">@dimen/font_medium_small</item>
    </style>

    <style name="TextViewRegularDarkGrayExtraSmall">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:fontFamily">@font/google_sans_regular</item>
        <item name="android:textColor">@color/colorDarkGray</item>
        <item name="android:textSize">@dimen/font_extra_small</item>
    </style>

    <style name="NunitoSemiBoldStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/nunito_semibold</item>
    </style>

    <style name="TitleStyle" parent="android:Widget.TextView">
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/oswald</item>
        <item name="android:lineSpacingMultiplier">0.75</item>
    </style>


    <style name="Widget.Shrine.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/TextAppearance.Shrine.TextInputLayout.HintText</item>
        <item name="hintTextColor">@color/textColorPrimary</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="boxStrokeColor">@color/textInputOutlineColor</item>
    </style>

    <style name="TextAppearance.Shrine.TextInputLayout.HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="Widget.Shrine.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="backgroundTint">?attr/colorPrimaryDark</item>
    </style>

    <style name="Widget.Shrine.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="Widget.Shrine.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorAccent</item>
        <item name="android:theme">@style/Theme.WisnuFebri</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="titleTextAppearance">@style/TextAppearance.Shrine.Toolbar</item>
    </style>

    <style name="TextAppearance.Shrine.Toolbar" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
    </style>

</resources>